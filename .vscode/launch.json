{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Nodemon Debug",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/src/index.js", // Change to your entry file (e.g., app.js)
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "NODE_ENV": "development"
        },
        "args": ["--inspect"], // Enables debugging with Nodemon
        "skipFiles": ["<node_internals>/**"],
        "runtimeArgs": ["--experimental-modules"], // Add this if using ES modules
        // "watch": ["${workspaceFolder}"] // Watches for changes in the project directory
      }
    ]
  }
  